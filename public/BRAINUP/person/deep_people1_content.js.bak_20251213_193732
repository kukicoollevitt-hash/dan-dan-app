/**
 * ✅ 단원 자동 인식 (강화)
 * 우선순위: ?unit=people1_XX → 파일명 people1_XX.html → 제목 숫자
 */
(function () {
  // 이미 설정된 CUR_UNIT이 있고, people1_로 시작하면 덮어쓰지 않음
  if (window.CUR_UNIT && window.CUR_UNIT.startsWith('deep_people1_')) {
    console.log('[deep_people1_content.js] CUR_UNIT 이미 설정됨:', window.CUR_UNIT);
    return;
  }

  const qs = new URLSearchParams(location.search).get('unit');
  let unit = null;

  if (qs) {
    const m = qs.toLowerCase().match(/deep_people1[_-]?(d{1,2})/);
    if (m) unit = `deep_people1_${m[1].padStart(2, '0')}`;
  }

  if (!unit) {
    const m2 = location.pathname.toLowerCase().match(/deep_people1[_-]?(d{1,2})\.html/);
    if (m2) unit = `deep_people1_${m2[1].padStart(2, '0')}`;
  }

  if (!unit && document.title) {
    const m3 = document.title.match(/(\d{1,2})/);
    if (m3) unit = `deep_people1_${m3[1].padStart(2, '0')}`;
  }

  window.CUR_UNIT = unit || 'deep_people1_01';
})();

/* ===============================
   ✅ 전역 CONTENTS 준비 (단일화)
   =============================== */
window.CONTENTS = window.CONTENTS || {};

/* ===== 콘텐츠 팩: 단원별 지문/어휘/문제/정답 =====
   ✅ 기존 const CONTENTS = {...} → window.CONTENTS 에 합치기
*/
window.CONTENTS = Object.assign(window.CONTENTS, {
  /* ===== people1_01 : "다짐으로 다시 태어난 김유신" ===== */
  deep_people1_01: {
