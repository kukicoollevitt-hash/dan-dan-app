  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;700;900&display=swap" rel="stylesheet">
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: 'Noto Sans KR', sans-serif;
      background: #1a237e;
      min-height: 100vh;
      overflow-x: hidden;
    }

    /* 배경 이미지 컨테이너 */
    .bg-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      transition: background-image 0.8s ease-in-out;
    }

    .bg-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(to bottom, rgba(26, 35, 126, 0.3) 0%, rgba(26, 35, 126, 0.7) 100%);
    }

    /* 스크롤 콘텐츠 */
    .scroll-container {
      position: relative;
      z-index: 1;
    }

    /* 인트로 섹션 */
    .intro-section {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 60px 20px;
      text-align: center;
    }

    .book-title {
      font-size: clamp(2rem, 5vw, 3.5rem);
      font-weight: 900;
      color: #fff;
      margin-bottom: 15px;
      text-shadow: 0 4px 30px rgba(0,0,0,0.5);
      line-height: 1.3;
    }

    .book-subtitle {
      font-size: clamp(1rem, 2.5vw, 1.4rem);
      color: #90caf9;
      margin-bottom: 10px;
      font-weight: 400;
    }

    .book-quote {
      font-size: clamp(0.9rem, 2vw, 1.1rem);
      color: #ffcc80;
      margin-bottom: 50px;
      font-style: italic;
    }

    .intro-content {
      display: flex;
      gap: 30px;
      flex-wrap: wrap;
      justify-content: center;
      max-width: 1000px;
    }

    .intro-box {
      background: rgba(255,255,255,0.1);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      padding: 30px;
      width: 300px;
      border: 1px solid rgba(255,255,255,0.2);
    }

    .intro-box h3 {
      color: #90caf9;
      font-size: 1.2rem;
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .intro-box p {
      color: rgba(255,255,255,0.9);
      font-size: 0.95rem;
      line-height: 1.8;
      text-align: left;
    }

    .conflict {
      background: rgba(255, 152, 0, 0.2);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      padding: 30px;
      width: 100%;
      max-width: 630px;
      border: 1px solid rgba(255, 152, 0, 0.4);
      margin-top: 10px;
    }

    .conflict h3 {
      color: #ffcc80;
      font-size: 1.2rem;
      margin-bottom: 20px;
    }

    .conflict p {
      color: rgba(255,255,255,0.9);
      font-size: 0.95rem;
      line-height: 1.9;
      text-align: left;
      margin-bottom: 8px;
    }

    .scroll-indicator {
      margin-top: 50px;
      color: rgba(255,255,255,0.6);
      font-size: 0.9rem;
      animation: bounce 2s infinite;
    }

    @keyframes bounce {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(10px); }
    }

    /* 챕터 카드 */
    .chapter-section {
      min-height: 100vh;
      display: flex;
      align-items: center;
      padding: 60px 20px;
    }

    .chapter-card {
      max-width: 600px;
      background: rgba(255,255,255,0.95);
      border-radius: 24px;
      padding: 40px;
      box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    }

    .chapter-section:nth-child(odd) {
      justify-content: flex-start;
      padding-left: 5%;
    }

    .chapter-section:nth-child(even) {
      justify-content: flex-end;
      padding-right: 5%;
    }

    .chapter-number {
      display: inline-block;
      background: linear-gradient(135deg, #1a237e, #3949ab);
      color: #fff;
      font-size: 0.85rem;
      font-weight: 700;
      padding: 8px 16px;
      border-radius: 20px;
      margin-bottom: 15px;
    }

    .chapter-title {
      font-size: 1.6rem;
      font-weight: 900;
      color: #1a237e;
      margin-bottom: 20px;
      line-height: 1.4;
    }

    .chapter-text {
      font-size: 1.05rem;
      color: #333;
      line-height: 2;
      text-align: justify;
      word-break: keep-all;
    }

    .chapter-text .highlight {
      color: #1a237e;
      font-weight: 600;
    }

    /* 엔딩 섹션 */
    .ending-section {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 60px 20px;
      text-align: center;
    }

    .ending-card {
      max-width: 700px;
      background: rgba(255,255,255,0.95);
      border-radius: 24px;
      padding: 50px;
      box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    }

    .ending-title {
      font-size: 1.8rem;
      font-weight: 900;
      color: #1a237e;
      margin-bottom: 25px;
    }

    .ending-text {
      font-size: 1.05rem;
      color: #333;
      line-height: 2;
      text-align: justify;
      word-break: keep-all;
    }

    .ending-text .highlight {
      color: #1a237e;
      font-weight: 600;
    }

    /* 뒤로가기 버튼 */
    .back-btn {
      position: fixed;
      top: 30px;
      left: 30px;
      z-index: 100;
      background: rgba(255,255,255,0.15);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255,255,255,0.3);
      color: #fff;
      padding: 12px 24px;
      border-radius: 30px;
      font-size: 0.95rem;
      cursor: pointer;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .back-btn:hover {
      background: rgba(255,255,255,0.25);
      transform: translateX(-5px);
    }

    /* 반응형 */
    @media (max-width: 768px) {
      .chapter-section:nth-child(odd),
      .chapter-section:nth-child(even) {
        justify-content: center;
        padding-left: 15px;
        padding-right: 15px;
      }

      .chapter-card {
